{
  "variables": {
    "disk_size": 8192,
    "os_name": "centos7",
    "root_password": "vagrant",
    "vm_prefix": "ibox",
    "iso_checksum": "df6dfdd25ebf443ca3375188d0b4b7f92f4153dc910b17bccc886bd54a7b7c86",
    "iso_url": "http://mirror.switch.ch/ftp/mirror/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
    "headless": true,
    "mem": 1024,
    "vcpu": 1
  },
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `os_name`}}.ks<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "{{user `vm_prefix`}}-{{user `os_name`}}-x86_64-qemu",
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "{{user `root_password`}}",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "headless": "{{user `headless`}}",
      "accelerator": "kvm",
      "qemuargs": [
        [ "-m", "{{user `mem`}}M" ],
        [ "-smp", "cpus={{user `vcpu`}}" ]
      ],
      "vm_name": "packer-{{user `vm_prefix`}}-{{user `os_name`}}-x86_64-qemu"
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `os_name`}}.ks<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/{{.Version}}/VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_path": "/root/VBoxGuestAdditions.iso",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "{{user `vm_prefix`}}-{{user `os_name`}}-x86_64-virtualbox",
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "{{user `root_password`}}",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "headless": "{{user `headless`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `mem`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `vcpu`}}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-{{user `vm_prefix`}}-{{user `os_name`}}-x86_64-virtualbox"
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `os_name`}}.ks<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "rhel7-64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "{{user `vm_prefix`}}-{{user `os_name`}}-x86_64-vmware",
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "{{user `root_password`}}",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "headless": "{{user `headless`}}",
      "vm_name": "packer-{{user `vm_prefix`}}-{{user `os_name`}}-x86_64-vmware",
      "vmx_data": {
        "cpuid.coresPerSocket": "{{user `vcpu`}}",
        "memsize": "{{user `mem`}}",
        "numvcpus": "{{user `vcpu`}}"
      }
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{.Provider}}/{{user `vm_prefix`}}-{{user `os_name`}}-x86_64-virtualbox.box",
      "type": "vagrant",
      "only": ["virtualbox-iso"]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/vbox-additions.sh",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "script": "scripts/postinstall.sh"
    },
    {
      "type": "shell",
      "script": "scripts/zerodisk.sh"
    }
  ]
}
